{
  "manifest_version": 2,
  "name": "Twitch Multi Volume",
  "version": "1.0",

  "description": "Set Volume for each Streamer.",

  "icons": {
    "48": "icons/volumes-48.png"
  },

  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "twitchmultivolume@glntaugly",
      "data_collection_permissions": {
        "required": ["websiteActivity", "websiteContent"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": ["change_volumes.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}